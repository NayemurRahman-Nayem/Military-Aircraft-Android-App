<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Home_Page">




    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/coding"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/grid1"
        android:columnCount="2"
        android:layout_centerInParent="true"
        android:rowCount="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/lottie"
        android:layout_centerHorizontal="true"
        >

        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_gravity="center"
            android:layout_column="0"
            >
            
            <LinearLayout
                android:id="@+id/userProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"  >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/profile"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/machineLearning"
                android:orientation="vertical"  >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/machine_learning"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine Learning"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/grid2"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grid1" >


        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gotoMap"
                android:layout_marginTop="2dp"

                android:orientation="vertical"  >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/map"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAP"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/embeddedVideo"
                android:orientation="vertical"  >

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/video"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Embedded Video"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/grid3"
        android:columnCount="2"
        android:rowCount="1"
        android:foregroundGravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grid2" >

        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="0"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Rating"
                android:orientation="vertical"  >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/rating"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Rate this App "
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"

            android:layout_row="0"
            android:layout_column="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/post"
                android:orientation="vertical"  >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/post"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Posts"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>









    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/grid4"
        android:columnCount="2"
        android:rowCount="1"
        android:foregroundGravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grid3" >

        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:layout_column="0"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RESTfulAPI"
                android:orientation="vertical"  >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/api"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="RESTful API"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_gravity="center"

            android:layout_row="0"
            android:layout_column="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/graphql"
                android:orientation="vertical"  >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:lottie_rawRes="@raw/graphql"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="GraphQL"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>








    </RelativeLayout>

</ScrollView>